<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center mb-4">Đăng ký</h2>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "max-width:100%" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "max-width:100%" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "max-width:100%" })
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                </div>
                <div class="text-center mt-3">
                    <span>Bạn đã có tài khoản? </span><a href="@Url.Action("Login", "Account")">Đăng Nhập</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
